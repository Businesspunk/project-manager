{% extends 'app/index.html.twig' %}

{% block title %}Create project{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <span><a href="{{ path('home') }}">Home</a></span>
    </li>
    <li class="breadcrumb-item">
        <span><a href="{{ path('work.projects') }}">Projects</a></span>
    </li>
    <li class="breadcrumb-item active"><span>Create</span></li>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">Create new project</div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="input-group mb-3">
                    {{ form_widget(form.name, {'attr': {'placeholder': 'Project name'}}) }}
                </div>
                <div class="input-group mb-3">
                    {{ form_widget(form.sort, {'attr': {'placeholder': 'Sort'}}) }}
                </div>
                <button class="btn btn-block btn-info text-white" type="submit">Create</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}