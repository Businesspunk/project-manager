{% extends 'app/index.html.twig' %}

{% block title %}Profile{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <span><a href="{{ path('home') }}">Home</a></span>
    </li>
    <li class="breadcrumb-item active"><span>Profile</span></li>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">Profile</div>
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th scope="row">ID</th>
                        <td>{{ detail.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Created</th>
                        <td>{{ detail.date }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Email</th>
                        <td>
                            <span>{{ detail.email }}</span>
                            <a class="btn btn-outline-info btn-small-icon" href="{{ path('profile.email.change') }}">
                                <svg class="icon">
                                    <use xlink:href="{{ asset('build/coreui/icons/svg/free.svg#cil-pen') }}"></use>
                                </svg>
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Role</th>
                        <td>{{ user_role(detail.role) }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Status</th>
                        <td>{{ user_status(detail.status) }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    {% if detail.networks %}
    <div class="card mt-5">
        <div class="card-header">Networks</div>
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                {% for network in detail.networks %}
                    <tr>
                        <th scope="row">{{ network.network }}</th>
                        <td>{{ network.identity }}</td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>
    </div>
    {% endif %}
{% endblock %}