{% extends 'auth.html.twig' %}

{% block card %}
    <div class="card mb-4 mx-4">
        <div class="card-body p-4">
            <h1>Register</h1>
            <p class="text-medium-emphasis">Create your account</p>
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            {{ form_start(form) }}
            <div class="input-group mb-3">
                <span class="input-group-text">
                    <svg class="icon"><use xlink:href="{{ asset('build/coreui/icons/svg/free.svg#cil-user') }}"></use></svg>
                </span>
                {{ form_widget(form.first_name, {'attr': {'class': 'form-control', 'placeholder': 'First name'}}) }}
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text">
                    <svg class="icon"><use xlink:href="{{ asset('build/coreui/icons/svg/free.svg#cil-user') }}"></use></svg>
                </span>
                {{ form_widget(form.last_name, {'attr': {'class': 'form-control', 'placeholder': 'Last name'}}) }}
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text">
                    <svg class="icon"><use xlink:href="{{ asset('build/coreui/icons/svg/free.svg#cil-envelope-closed') }}"></use></svg>
                </span>
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'E-mail'}}) }}
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text"><svg class="icon"><use xlink:href="{{ asset('build/coreui/icons/svg/free.svg#cil-lock-locked') }}"></use></svg></span>
                {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
            </div>
            <button class="btn btn-block btn-success" type="submit">Create Account</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}


